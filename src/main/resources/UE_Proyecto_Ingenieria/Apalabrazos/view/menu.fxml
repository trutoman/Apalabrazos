<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="UE_Proyecto_Ingenieria.Apalabrazos.frontend.controller.MenuController"
      alignment="CENTER" spacing="12" stylesheets="@styles.css">
    <padding>
        <Insets top="40" right="40" bottom="40" left="40" />
    </padding>
    <Label text="Apalabrados 2D" style="-fx-font-size: 28px; -fx-font-weight: bold;" />
    <Label text="Introduce los nombres de los jugadores" />
    <TextField fx:id="playerOneField" promptText="Nombre del Jugador 1" />
    <TextField fx:id="playerTwoField" promptText="Nombre del Jugador 2" />
    <Button fx:id="startButton" text="Comenzar partida" />
</VBox>