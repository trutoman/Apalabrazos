<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.shape.Circle?>

<!-- ===== VISTA DE MENÚ PRINCIPAL ===== -->
<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="UE_Proyecto_Ingenieria.Apalabrazos.frontend.controller.MenuController"
            prefHeight="600.0" prefWidth="800.0" stylesheets="@styles.css">
            
    <!-- ===== PERFIL DE USUARIO (arriba a la derecha) ===== -->
    <top>
        <HBox alignment="TOP_RIGHT" spacing="10" styleClass="profile-container">
            <VBox alignment="CENTER" spacing="5">
                <ImageView fx:id="profileImage" fitHeight="60.0" fitWidth="60.0"
                          preserveRatio="true" styleClass="profile-image">
                    <image>
                        <Image url="@../images/default-profile.png" />
                    </image>
                </ImageView>
                <Label fx:id="usernameLabel" text="Usuario" styleClass="username-label"/>
            </VBox>
        </HBox>
    </top>

    <!-- ===== MENÚ CENTRAL - TÍTULO Y BOTONES ===== -->
    <center>
        <VBox alignment="CENTER" spacing="20" styleClass="menu-container">
            <!-- Título del juego -->
            <Label text="Apalabrazos" styleClass="menu-title"/>

            <!-- ===== BOTONES DEL MENÚ ===== -->
            <VBox spacing="15" alignment="CENTER" styleClass="menu-buttons-container">
                <!-- Botón: Modo Un Jugador -->
                <Button fx:id="singlePlayerButton" text="Jugar Solo"
                        prefWidth="450.0" prefHeight="150.0"
                        styleClass="menu-button, single-player-button"/>

                <!-- Campo de texto para nombre del jugador -->
                <TextField fx:id="playerNameInput" promptText="Nombre"
                        prefWidth="450.0" prefHeight="150.0" maxWidth="450.0" minWidth="450.0"
                        visible="false" managed="false"
                        styleClass="player-name-input"/>

                <!-- Botón: Modo Multijugador (Deshabilitado) -->
                <Button fx:id="multiplayerButton" text="Jugar Multijugador (Próximamente)"
                        prefWidth="450.0" prefHeight="150.0"
                        styleClass="menu-button, multiplayer-button"
                        disable="true"/>

                <!-- Botón: Ver Puntuaciones -->
                <Button fx:id="scoresButton" text="Ver Puntuaciones"
                        prefWidth="450.0" prefHeight="150.0"
                        styleClass="menu-button, scores-button"/>

                <!-- Botón: Salir del juego -->
                <Button fx:id="exitButton" text="Salir"
                        prefWidth="450.0" prefHeight="150.0"
                        styleClass="menu-button, exit-button"/>
            </VBox>
        </VBox>
    </center>

</BorderPane>