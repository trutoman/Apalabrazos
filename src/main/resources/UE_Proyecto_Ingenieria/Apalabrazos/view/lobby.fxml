<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="UE_Proyecto_Ingenieria.Apalabrazos.frontend.controller.LobbyController"
            stylesheets="@styles.css">

    <top>
        <HBox alignment="TOP_RIGHT" spacing="10" style="-fx-padding: 20; -fx-background-color: #f5f5f5; -fx-border-color: #ddd; -fx-border-width: 0 0 1 0;">
            <VBox alignment="CENTER" spacing="5">
                <ImageView fx:id="profileImage" fitHeight="50.0"
                          preserveRatio="true" style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 8, 0, 0, 2);">
                    <image>
                        <Image url="@../images/default-profile.png" />
                    </image>
                </ImageView>
                <Label fx:id="usernameLabel" text="Jugador"
                       style="-fx-font-size: 12px; -fx-font-weight: bold;"/>
            </VBox>
        </HBox>
    </top>

    <center>
        <GridPane hgap="15" vgap="0" style="-fx-padding: 20;">
            <columnConstraints>
                <ColumnConstraints percentWidth="25" />
                <ColumnConstraints percentWidth="25" />
                <ColumnConstraints />
            </columnConstraints>

            <VBox spacing="15" style="-fx-padding: 15; -fx-background-color: #f9f9f9; -fx-border-color: #ddd; -fx-border-width: 1; -fx-border-radius: 8; -fx-background-radius: 8;" GridPane.columnIndex="0">
                <Label text="Configuración de la Partida"
                       style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                <Separator />

                <VBox spacing="5">
                    <Label text="Tu Nombre:" style="-fx-font-size: 12px; -fx-font-weight: bold;"/>
                    <TextField fx:id="playerNameInput" promptText="Ingresa tu nombre" prefHeight="35.0"
                               style="-fx-font-size: 13px; -fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #3498db; -fx-border-width: 1px; -fx-padding: 8;"/>
                </VBox>

                <HBox spacing="5" alignment="CENTER">

                    <VBox spacing="5">
                        <Label text="Dificultad:" style="-fx-font-size: 12px; -fx-font-weight: bold;"/>
                        <ComboBox fx:id="difficultyCombo" promptText="Selecciona dificultad" prefHeight="35.0" maxWidth="Infinity"
                                style="-fx-font-size: 13px; -fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #3498db; -fx-border-width: 1px; -fx-padding: 2;"/>
                    </VBox>

                    <VBox spacing="5">
                        <Label text="Tipo de Juego:" style="-fx-font-size: 12px; -fx-font-weight: bold;"/>
                        <ComboBox fx:id="gameTypeCombo" promptText="Selecciona tipo" prefHeight="35.0" maxWidth="Infinity"
                                style="-fx-font-size: 13px; -fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #3498db; -fx-border-width: 1px; -fx-padding: 2;"/>
                    </VBox>

                </HBox>
                <HBox spacing="5" alignment="CENTER">
                    <VBox spacing="5">
                        <Label text="Nº Preguntas:" style="-fx-font-size: 12px; -fx-font-weight: bold;"/>
                        <TextField fx:id="questionCountInput" promptText="27" text="27" prefHeight="35.0"
                                style="-fx-font-size: 13px; -fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #3498db; -fx-border-width: 1px;"/>
                    </VBox>

                    <VBox spacing="5">
                        <Label text="Duración(seg):" style="-fx-font-size: 12px; -fx-font-weight: bold;"/>
                        <TextField fx:id="durationInput" promptText="240" text="240" prefHeight="35.0"
                                style="-fx-font-size: 13px; -fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #3498db; -fx-border-width: 1px;"/>
                    </VBox>
                </HBox>

                <HBox spacing="5" alignment="CENTER">

                    <VBox spacing="5">
                        <Label text="Room id:" style="-fx-font-size: 12px; -fx-font-weight: bold;"/>
                        <TextField fx:id="roomCodeInput" text="ROOM-1234" editable="false" prefHeight="35.0"
                                style="-fx-font-size: 13px; -fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #bdc3c7; -fx-border-width: 1px; -fx-padding: 8; -fx-text-fill: #7f8c8d;"/>
                    </VBox>

                    <VBox spacing="5">
                        <Label style="-fx-font-size: 12px; -fx-font-weight: bold;"/>
                        <Button fx:id="joinButton" text="Unirse"
                                prefHeight="35.0"
                                style="-fx-font-size: 16px; -fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 6; -fx-cursor: hand;"/>
                    </VBox>
                </HBox>

                <Separator />

                <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10; -fx-background-color: #ecf0f1; -fx-background-radius: 6;">
                    <Label text="Estado:" style="-fx-font-size: 11px; -fx-font-weight: bold;"/>
                    <Label fx:id="statusLabel" text="Esperando jugadores..."
                           style="-fx-font-size: 11px; -fx-text-fill: #f39c12;"/>
                </HBox>

                <Region VBox.vgrow="ALWAYS" />

                <HBox spacing="10" alignment="CENTER" style="-fx-padding: 10 0 0 0;">
                    <Button fx:id="startButton" text="Crear partida"
                            prefWidth="200.0" prefHeight="45.0"
                            style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: #2ecc71; -fx-text-fill: white; -fx-background-radius: 8; -fx-cursor: hand;"/>
                    <Button fx:id="backButton" text="Volver"
                            prefWidth="150.0" prefHeight="45.0"
                            style="-fx-font-size: 14px; -fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 8; -fx-cursor: hand;"/>
                </HBox>
            </VBox>

            <VBox spacing="12" style="-fx-padding: 15; -fx-background-color: #f9f9f9; -fx-border-color: #ddd; -fx-border-width: 1; -fx-border-radius: 8; -fx-background-radius: 8;" GridPane.columnIndex="1">
                <Label text="Partidas creadas"
                       style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                <TableView fx:id="gamesTable" prefHeight="520.0" style="-fx-font-size: 12px;">
                    <columns>
                        <TableColumn text="Sala" prefWidth="120.0" fx:id="gameRoomColumn" />
                        <TableColumn text="Anfitrión" prefWidth="160.0" fx:id="gameHostColumn" />
                        <TableColumn text="Jugadores" prefWidth="120.0" fx:id="gamePlayersColumn" />
                    </columns>
                </TableView>
            </VBox>

            <VBox spacing="12" style="-fx-padding: 15; -fx-background-color: #f9f9f9; -fx-border-color: #ddd; -fx-border-width: 1; -fx-border-radius: 8; -fx-background-radius: 8;" GridPane.columnIndex="2">
                <Label text="Jugadores de la partida"
                       style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                <TableView fx:id="selectedPlayersTable" prefHeight="520.0" style="-fx-font-size: 12px;">
                    <columns>
                        <TableColumn text="Nombre" prefWidth="160.0" fx:id="selectedPlayerNameColumn" />
                        <TableColumn text="Estado" prefWidth="140.0" fx:id="selectedPlayerStatusColumn" />
                    </columns>
                </TableView>
            </VBox>
        </GridPane>
    </center>

</BorderPane>
