<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.canvas.Canvas?>

<GridPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="UE_Proyecto_Ingenieria.Apalabrazos.frontend.controller.GameController"
          stylesheets="@styles.css"
          style="-fx-background-color: #1a252f;">

    <padding>
        <Insets top="80" bottom="80" left="0" right="0" />
    </padding>

    <!-- 1 columna: todo centrado -->
    <columnConstraints>
        <ColumnConstraints percentWidth="100.0" />
    </columnConstraints>

    <!-- 4 filas: cabecera (4%), rosco (66%), pregunta (27%), contadores (3%) -->
    <rowConstraints>
        <RowConstraints percentHeight="3.0" />
        <RowConstraints percentHeight="68.0" />
        <RowConstraints percentHeight="26.0" />
        <RowConstraints percentHeight="3.0" />
    </rowConstraints>

    <!-- ===== FILA 0: CABECERA ===== -->
    <VBox GridPane.columnIndex="0" GridPane.rowIndex="0" alignment="CENTER"
          style="-fx-padding: 8; -fx-background: linear-gradient(to bottom, #2c3e50, #34495e);">
        <Label text="Apalabrazzos" styleClass="titulo-principal" />
    </VBox>

    <!-- ===== FILA 1: ROSCO Y OPCIONES ===== -->
    <GridPane GridPane.columnIndex="0" GridPane.rowIndex="1" alignment="CENTER">
        <columnConstraints>
            <ColumnConstraints percentWidth="25.0" />
            <ColumnConstraints percentWidth="50.0" />
            <ColumnConstraints percentWidth="25.0" />
        </columnConstraints>

        <rowConstraints>
            <RowConstraints percentHeight="100.0" />
        </rowConstraints>

        <!-- Columna izquierda: BOTONES A Y C (ocultas inicialmente) -->
        <VBox fx:id="leftOptionsArea" GridPane.columnIndex="0" alignment="CENTER_LEFT" spacing="40"
            style="-fx-padding: 30;"
            visible="false" managed="false">

            <HBox alignment="CENTER_LEFT" spacing="15">
                <Button fx:id="option1Button" text="A" prefWidth="120" prefHeight="120"
                        styleClass="letter-button" />
                <Label fx:id="option1Description" text="Texto de la opción A"
                    wrapText="true" maxWidth="200"
                    style="-fx-text-fill: #FFD700; -fx-font-size: 20px; -fx-font-weight: bold;" />
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="15">
                <Button fx:id="option3Button" text="C" prefWidth="120" prefHeight="120"
                        styleClass="letter-button" />
                <Label fx:id="option3Description" text="Texto de la opción C"
                    wrapText="true" maxWidth="200"
                    style="-fx-text-fill: #FFD700; -fx-font-size: 20px; -fx-font-weight: bold;" />
            </HBox>

        </VBox>

        <!-- Columna central: ROSCO centrado -->
        <StackPane GridPane.columnIndex="1" alignment="CENTER">
            <children>
                <!-- Canvas para futuros dibujos - DETRÁS -->
                <Canvas fx:id="playerOneCanvas" width="550" height="550" opacity="0" />

                <!-- Pane donde se crean dinámicamente los botones del rosco - VISIBLE -->
                <Pane fx:id="roscoPane" prefWidth="550" prefHeight="550" minWidth="400" minHeight="400" />

                <!-- Botón de inicio (antes de empezar) - CENTRO DE REFERENCIA -->
                <Button fx:id="startButton" text="EMPEZAR" prefWidth="150" prefHeight="150"
                        style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-background-color: #27ae60; -fx-text-fill: white; -fx-border-radius: 75; -fx-background-radius: 75; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 10, 0, 0, 4);" />

                <!-- Botón Pasapalabra (después de empezar) - MISMO CENTRO -->
                <Button fx:id="skipButton" text="PASAR" prefWidth="130" prefHeight="130"
                        visible="false" managed="false"
                        onMousePressed="#handleSkipPressed"
                        onMouseReleased="#handleSkipReleased"
                        style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-background-color: #3498db; -fx-text-fill: white; -fx-border-radius: 65; -fx-background-radius: 65; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 8, 0, 0, 3);" />
            </children>
        </StackPane>

        <!-- Columna derecha: BOTONES B Y D (ocultas inicialmente) -->
        <VBox fx:id="rightOptionsArea" GridPane.columnIndex="2" alignment="CENTER_RIGHT" spacing="40"
            style="-fx-padding: 30;"
            visible="false" managed="false">

            <HBox alignment="CENTER_RIGHT" spacing="15">
                <Label fx:id="option2Description" text="Texto de la opción B"
                    wrapText="true" maxWidth="200" textAlignment="RIGHT"
                    style="-fx-text-fill: #FFD700; -fx-font-size: 20px; -fx-font-weight: bold;" />
                <Button fx:id="option2Button" text="B" prefWidth="120" prefHeight="120"
                        styleClass="letter-button" />
            </HBox>

            <HBox alignment="CENTER_RIGHT" spacing="15">
                <Label fx:id="option4Description" text="Texto de la opción D"
                    wrapText="true" maxWidth="200" textAlignment="RIGHT"
                    style="-fx-text-fill: #FFD700; -fx-font-size: 20px; -fx-font-weight: bold;" />
                <Button fx:id="option4Button" text="D" prefWidth="120" prefHeight="120"
                        styleClass="letter-button" />
            </HBox>

        </VBox>

    </GridPane>

    <!-- ===== FILA 2: ÁREA DE PREGUNTAS Y OPCIONES (oculta inicialmente) ===== -->
    <VBox fx:id="questionArea" GridPane.columnIndex="0" GridPane.rowIndex="2"
          alignment="CENTER" spacing="15"
          visible="false" managed="false"
          style="-fx-padding: 20 60 20 60; -fx-background: linear-gradient(to bottom, #34495e, #2c3e50);">
        <Label fx:id="questionLabel" wrapText="true" textAlignment="CENTER"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white; -fx-text-alignment: center;" />
    </VBox>

    <!-- ===== FILA 3: CONTADORES ABAJO ===== -->
    <VBox GridPane.columnIndex="0" GridPane.rowIndex="3" alignment="CENTER" spacing="10"
      style="-fx-padding: 15; -fx-background-color: #2c3e50;">

        <HBox alignment="CENTER" spacing="12">
            <Label text="⏱" style="-fx-font-size: 24px;" />
            <Label fx:id="timerLabel" text="180"
                style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #f39c12;" />
        </HBox>

        <HBox alignment="CENTER" spacing="80">
            <HBox alignment="CENTER" spacing="10">
                <Label text="✓" style="-fx-font-size: 20px; -fx-text-fill: #27ae60;" />
                <Label fx:id="correctCountLabel" text="0"
                    style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #27ae60;" />
            </HBox>

            <HBox alignment="CENTER" spacing="10">
                <Label text="✗" style="-fx-font-size: 20px; -fx-text-fill: #e74c3c;" />
                <Label fx:id="incorrectCountLabel" text="0"
                    style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #e74c3c;" />
            </HBox>
        </HBox>
    </VBox>

</GridPane>