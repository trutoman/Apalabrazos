<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.shape.Rectangle?>

<GridPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="UE_Proyecto_Ingenieria.Apalabrazos.frontend.controller.GameController"
          stylesheets="@styles.css">
    <!-- 2 columnas: 25% izquierda (sidebar), 75% derecha (contenidos) -->
    <columnConstraints>
        <ColumnConstraints percentWidth="75.0" />
        <ColumnConstraints percentWidth="25.0" />
    </columnConstraints>
    <!-- 3 filas: cabecera, contenido principal, zona de preguntas -->
    <rowConstraints>
        <RowConstraints percentHeight="15.0" />
        <RowConstraints percentHeight="60.0" />
        <RowConstraints percentHeight="25.0" />
    </rowConstraints>

    <!-- Columna derecha (sidebar) ocupa las 3 filas -->
    <children>
        <!-- Sidebar derecha con dos filas: 25% (contador), 75% (contenido adicional) -->
        <GridPane GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.rowSpan="3"
                  prefWidth="320" minWidth="320" maxWidth="320">
            <rowConstraints>
                <RowConstraints percentHeight="25.0" />
                <RowConstraints percentHeight="75.0" />
            </rowConstraints>
            <children>
                <!-- Parte superior: rectángulo con contador de tiempo -->
                <StackPane GridPane.rowIndex="0" style="-fx-padding: 16;">
                    <children>
                        <Rectangle width="300" height="140" arcWidth="14" arcHeight="14"
                                   stroke="#000000" strokeWidth="2.5" fill="#ecf0f1"/>
                        <VBox alignment="CENTER" spacing="10">
                            <Label text="Tiempo restante" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                            <Label fx:id="timerLabel" text="180" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                        </VBox>
                    </children>
                </StackPane>
                <!-- Parte inferior: placeholder para futuros contenidos de la barra lateral -->
                <VBox GridPane.rowIndex="1" spacing="10"/>
            </children>
        </GridPane>

        <!-- Cabecera (fila 0, columna 1) -->
        <VBox GridPane.columnIndex="0" GridPane.rowIndex="0" alignment="CENTER" spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20" />
            </padding>
            <Label text="Rosco de preguntas" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
            <Label fx:id="currentPlayerLabel" text="Turno" style="-fx-font-size: 18px;" />
        </VBox>

        <!-- Contenido principal (fila 1, columna 0): canvas centrado -->
        <StackPane GridPane.columnIndex="0" GridPane.rowIndex="1">
            <Canvas fx:id="playerOneCanvas" width="360" height="360" />
        </StackPane>

        <!-- Zona de preguntas (fila 2, columna 1) -->
        <VBox GridPane.columnIndex="0" GridPane.rowIndex="2" spacing="10" alignment="CENTER" styleClass="question-area">
            <Label fx:id="questionPromptLabel" wrapText="true" style="-fx-font-size: 16px;" text="Pregunta" />
            <Label fx:id="feedbackLabel" style="-fx-text-fill: #555555;" />
            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="optionButtonOne" text="Opción 1" prefWidth="140" wrapText="true" />
                <Button fx:id="optionButtonTwo" text="Opción 2" prefWidth="140" wrapText="true" />
            </HBox>
            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="optionButtonThree" text="Opción 3" prefWidth="140" wrapText="true" />
                <Button fx:id="optionButtonFour" text="Opción 4" prefWidth="140" wrapText="true" />
            </HBox>
        </VBox>
    </children>
</GridPane>