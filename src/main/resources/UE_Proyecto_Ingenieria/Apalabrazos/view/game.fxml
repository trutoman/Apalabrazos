<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.shape.Rectangle?>

<GridPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="UE_Proyecto_Ingenieria.Apalabrazos.frontend.controller.GameController"
          stylesheets="@styles.css">
    <!-- 2 columnas: 25% izquierda (sidebar), 75% derecha (contenidos) -->
    <columnConstraints>
        <ColumnConstraints percentWidth="75.0" />
        <ColumnConstraints percentWidth="25.0" />
    </columnConstraints>

    <!-- Columna derecha (sidebar) ocupa las 3 filas -->
    <children>

        <GridPane GridPane.columnIndex="0">
                <columnConstraints>
                    <ColumnConstraints percentWidth="25.0" />
                    <ColumnConstraints percentWidth="50.0" />
                    <ColumnConstraints percentWidth="25.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints percentHeight="80.0" />
                    <RowConstraints percentHeight="20.0" />
                </rowConstraints>
                <children>

                    <!-- ===== BOTONES DE OPCIONES - IZQUIERDA ===== -->
                    <VBox fx:id="leftButtonsArea" spacing="15" GridPane.rowIndex="0" GridPane.columnIndex="0" alignment="CENTER" visible="false" managed="false">
                        <Button fx:id="option1Button" prefWidth="200" prefHeight="50" styleClass="option-button" />
                        <Button fx:id="option2Button" prefWidth="200" prefHeight="50" styleClass="option-button" />
                    </VBox>

                    <!-- ===== ROSCO CENTRAL ===== -->
                    <StackPane alignment="CENTER" GridPane.rowIndex="0" GridPane.columnIndex="1" >
                        <!-- Panel circular con letras del alfabeto -->
                        <Pane fx:id="roscoPane" prefWidth="400" prefHeight="400" maxWidth="400" maxHeight="400" />

                        <!-- Botón de inicio del juego -->
                        <Button fx:id="startButton" text="Empezar"
                                prefWidth="150" prefHeight="60"
                                styleClass="start-button" />

                        <!-- Botón PASAPALABRA (circular, dentro del rosco) -->
                        <Button fx:id="skipButton" text="PASAPALABRA"
                                prefWidth="120" prefHeight="120"
                                visible="false" managed="false"
                                styleClass="skip-button" />
                    </StackPane>

                    <!-- ===== BOTONES DE OPCIONES - DERECHA ===== -->
                    <VBox fx:id="rightButtonsArea" spacing="15" GridPane.rowIndex="0" GridPane.columnIndex="2"  alignment="CENTER" visible="false" managed="false">
                        <Button fx:id="option3Button" prefWidth="200" prefHeight="50" styleClass="option-button" />
                        <Button fx:id="option4Button" prefWidth="200" prefHeight="50" styleClass="option-button" />
                    </VBox>

                    <!-- ===== ÁREA DE PREGUNTA (debajo del rosco) ===== -->
                    <VBox fx:id="questionArea" spacing="10" GridPane.rowIndex="1" GridPane.columnIndex="0"  GridPane.columnSpan="3" alignment="CENTER" maxWidth="700"
                        visible="false" managed="false"
                        styleClass="question-area">
                        <Label fx:id="questionLabel" wrapText="true" styleClass="question-label" />
                    </VBox>

            </children>
        </GridPane>

        <!-- Sidebar derecha con dos filas: 25% (contador), 75% (contenido adicional) -->
        <GridPane GridPane.columnIndex="1">
            <rowConstraints>
                <RowConstraints percentHeight="25.0" />
                <RowConstraints percentHeight="25.0" />
                <RowConstraints percentHeight="50.0" />
            </rowConstraints>
            <children>
                <!-- Parte superior: rectángulo con contador de tiempo -->
                <StackPane GridPane.rowIndex="0" style="-fx-padding: 16; -fx-border-color: #000000; -fx-border-width: 2.5; -fx-border-radius: 7;">
                    <children>
                        <Rectangle  arcWidth="14" arcHeight="14"
                                   stroke="#000000" strokeWidth="2.5" fill="#ecf0f1"/>
                        <VBox alignment="CENTER" spacing="10">
                            <Label text="Tiempo" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                            <Label fx:id="timerLabel" text="180" style="-fx-font-size: 52px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                        </VBox>
                    </children>
                </StackPane>
                <!-- Parte inferior: botones de estadísticas -->
                <StackPane GridPane.rowIndex="1" style="-fx-padding: 16;">
                    <HBox spacing="8" alignment="CENTER">
                        <Button text="Aciertos" prefWidth="90" prefHeight="60"
                                style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-background-color: #ecf0f1; -fx-border-color: #000000; -fx-border-width: 2; -fx-border-radius: 8; -fx-background-radius: 8;"/>
                        <Button text="Fallos" prefWidth="90" prefHeight="60"
                                style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-background-color: #ecf0f1; -fx-border-color: #000000; -fx-border-width: 2; -fx-border-radius: 8; -fx-background-radius: 8;"/>
                        <Button text="Pasadas" prefWidth="90" prefHeight="60"
                                style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-background-color: #ecf0f1; -fx-border-color: #000000; -fx-border-width: 2; -fx-border-radius: 8; -fx-background-radius: 8;"/>
                    </HBox>
                </StackPane>
                <!-- Canvas rival en la tercera fila del sidebar -->
                <StackPane GridPane.rowIndex="2" style="-fx-border-color: #000000; -fx-padding: 16;">
                <children>
                    <Canvas fx:id="rivalCanvas" />
                </children>
                </StackPane>
            </children>
        </GridPane>

    </children>
</GridPane>