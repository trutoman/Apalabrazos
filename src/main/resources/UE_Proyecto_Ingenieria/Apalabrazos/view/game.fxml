<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.Pane?>

<StackPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="UE_Proyecto_Ingenieria.Apalabrazos.frontend.controller.GameController"
           stylesheets="@styles.css"
           style="-fx-background-color: #ecf0f1;">
    
    <VBox spacing="15" alignment="CENTER" StackPane.alignment="CENTER">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20" />
        </padding>
        
        <!-- Header -->
        <VBox alignment="CENTER" spacing="5">
            <Label text="Rosco de preguntas" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
            <Label fx:id="timerLabel" text="180" style="-fx-font-size: 16px; -fx-text-fill: #e74c3c; -fx-font-weight: bold;" />
        </VBox>
        
        <!-- Área del rosco -->
        <StackPane VBox.vgrow="ALWAYS" alignment="CENTER">
            <!-- Panel para posicionar las letras en círculo -->
            <Pane fx:id="roscoPane" prefWidth="400" prefHeight="400" maxWidth="400" maxHeight="400" />
            
            <!-- Botón de inicio (encima del rosco) -->
            <Button fx:id="startButton" text="Empezar" 
                    prefWidth="150" prefHeight="60"
                    style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-background-color: #27ae60; -fx-text-fill: white; -fx-border-radius: 10; -fx-background-radius: 10;" />
        </StackPane>
        
        <!-- Zona de preguntas -->
        <VBox fx:id="questionArea" spacing="10" alignment="CENTER"
              visible="false" managed="false"
              style="-fx-background-color: white; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 15;">
            
            <Label fx:id="questionLabel" wrapText="true" 
                   style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
            
            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="option1Button" prefWidth="150" prefHeight="40" 
                        style="-fx-font-size: 12px; -fx-background-color: #3498db; -fx-text-fill: white; -fx-border-radius: 5; -fx-background-radius: 5;" />
                <Button fx:id="option2Button" prefWidth="150" prefHeight="40" 
                        style="-fx-font-size: 12px; -fx-background-color: #3498db; -fx-text-fill: white; -fx-border-radius: 5; -fx-background-radius: 5;" />
            </HBox>
            
            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="option3Button" prefWidth="150" prefHeight="40" 
                        style="-fx-font-size: 12px; -fx-background-color: #3498db; -fx-text-fill: white; -fx-border-radius: 5; -fx-background-radius: 5;" />
                <Button fx:id="option4Button" prefWidth="150" prefHeight="40" 
                        style="-fx-font-size: 12px; -fx-background-color: #3498db; -fx-text-fill: white; -fx-border-radius: 5; -fx-background-radius: 5;" />
            </HBox>
            
            <!-- Botón Pasapalabra -->
            <Button fx:id="pasapalabraButton" text="PASAPALABRA" 
                    prefWidth="200" prefHeight="45"
                    style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: #f39c12; -fx-text-fill: white; -fx-border-radius: 5; -fx-background-radius: 5;" />
        </VBox>
    </VBox>
    
</StackPane>