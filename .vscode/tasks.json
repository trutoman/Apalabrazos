{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Rosetta (Mac Intel)",
      "type": "shell",
      "command": "${workspaceFolder}/run_rosetta.sh",
      "isBackground": false,
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "Maven Clean Compile",
      "type": "shell",
      "command": "arch -x86_64 /usr/local/bin/mvn -q clean compile",
      "isBackground": false,
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "group": {
        "kind": "build",
        "isDefault": false
      }
    }
  ]
}
